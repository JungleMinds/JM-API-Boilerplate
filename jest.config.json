{
  "coverageThreshold": {
    "global": {
      "functions": 80,
      "lines": 80
    }
  },
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!<rootDir>/package.spec.js"
  ],
  "coverageReporters": ["lcov", "text"],
  "testMatch": ["<rootDir>/package.spec.js", "<rootDir>/src/**/?(*.)spec.js"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!@org/domain)$"]
}
